#!/bin/bash

# Script for checking memory usage of a Virtual Machine

# Get the total memory and used memory
total_memory=$(free -m | awk 'NR==2 {print $2}')
used_memory=$(free -m | awk 'NR==2 {print $3}')

# Calculate the percentage of memory used
memory_percentage=$(echo "scale=2; $used_memory / $total_memory * 100" | bc)

# Display the results
echo "Total memory: $total_memory MB"
echo "Used memory: $used_memory MB"
echo "Memory usage: $memory_percentage%"
